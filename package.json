{
  "name": "chat-bot",
  "version": "1.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/EugeneDraitsev/telegram-bot-app"
  },
  "author": "Eugene Draitsev <ddrrai@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "sls offline start --reloadHandler",
    "build": "sls package",
    "lint": "eslint packages",
    "lint:fix": "eslint packages --fix",
    "tsc": "tsc --noEmit",
    "format": "prettier --write ./packages",
    "test": "jest --verbose  --coverage",
    "logs": "sls logs -f telegram-bot -t",
    "deploy": "sls deploy"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.329.0",
    "@aws-sdk/client-lambda": "^3.329.0",
    "@aws-sdk/client-s3": "^3.329.0",
    "@aws-sdk/lib-dynamodb": "^3.329.0",
    "lodash": "^4.17.21",
    "sharp": "^0.32.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.115",
    "@types/form-data": "^2.5.0",
    "@types/jest": "^29.5.1",
    "@types/lodash": "^4.14.194",
    "@types/sharp": "^0.31.1",
    "@typescript-eslint/eslint-plugin": "5.59.5",
    "@typescript-eslint/parser": "5.59.5",
    "aws-lambda": "^1.0.7",
    "esbuild": "^0.17.18",
    "esbuild-jest": "^0.5.0",
    "eslint": "8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-sonarjs": "^0.19.0",
    "jest": "^29.5.0",
    "lerna": "^6.6.2",
    "prettier": "^2.8.8",
    "serverless": "^3.30.1",
    "serverless-esbuild": "1.44.0",
    "serverless-offline": "^12.0.4",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">= 18"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "esbuild-jest",
        {
          "sourcemap": true
        }
      ]
    }
  },
  "workspaces": {
    "packages": [
      "packages/**"
    ]
  }
}
