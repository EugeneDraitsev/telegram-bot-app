{
  "name": "chat-bot",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/EugeneDraitsev/telegram-bot-app"
  },
  "author": "Eugene Draitsev <ddrrai@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "cross-env IS_LOCAL=true sls offline start",
    "lint": "eslint \"src/**\"",
    "lint:fix": "eslint \"src/**\" --fix",
    "tsc": "tsc --noEmit",
    "test": "cross-env IS_LOCAL=true jest --verbose  --coverage",
    "logs": "sls logs -f telegram-bot -t",
    "deploy-function": "sls deploy function --function telegram-bot --verbose"
  },
  "dependencies": {
    "@recap.dev/client": "^1.3.2",
    "aws-sdk": "^2.677.0",
    "aws-xray-sdk": "^3.0.1",
    "form-data": "^3.0.0",
    "lodash": "^4.17.15",
    "luxon": "^1.24.1",
    "node-fetch": "^2.6.0",
    "telegraf": "3.37.0",
    "telegram-typings": "^4.0.0-beta",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "@babel/core": "7.9.6",
    "@babel/preset-env": "7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "@recap.dev/serverless-plugin": "^1.1.0",
    "@types/form-data": "^2.5.0",
    "@types/jest": "^25.2.2",
    "@types/lodash": "^4.14.151",
    "@types/luxon": "^1.24.0",
    "@types/node-fetch": "^2.5.7",
    "@types/xml2js": "^0.4.5",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "babel-jest": "^26.0.1",
    "babel-loader": "^8.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.0.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.11.0",
    "jest": "^26.0.1",
    "jest-fetch-mock": "^3.0.3",
    "serverless": "^1.70.1",
    "serverless-offline": "^6.1.5",
    "serverless-webpack": "^5.3.2",
    "typescript": "^3.9.2",
    "webpack": "^5.0.0-beta.16"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "babel-jest"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/.webpack",
      "<rootDir>/node_modules/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleNameMapper": {
      "\\.mp4$": "<rootDir>/src/__mocks__/fileMock.ts"
    },
    "setupFiles": [
      "./setupJest.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
