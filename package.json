{
  "name": "chat-bot",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/EugeneDraitsev/telegram-bot-app"
  },
  "author": "Eugene Draitsev <ddrrai@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "cross-env IS_LOCAL=true sls offline start",
    "lint": "eslint \"src/**\"",
    "lint:fix": "eslint \"src/**\" --fix",
    "tsc": "tsc --noEmit",
    "format": "prettier --write ./src",
    "test": "cross-env IS_LOCAL=true jest --verbose  --coverage",
    "logs": "sls logs -f telegram-bot -t",
    "deploy": "sls deploy",
    "deploy:function": "sls deploy function --function telegram-bot --verbose"
  },
  "dependencies": {
    "aws-sdk": "^2.863.0",
    "aws-xray-sdk": "^3.2.0",
    "axios": "^0.21.1",
    "form-data": "^4.0.0",
    "lodash": "^4.17.21",
    "luxon": "^1.26.0",
    "polished": "^4.1.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "recharts": "^2.0.8",
    "sharp": "^0.27.2",
    "styled-components": "^5.2.1",
    "telegraf": "4.2.1",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "@babel/core": "7.13.10",
    "@babel/preset-env": "7.13.10",
    "@babel/preset-react": "^7.12.13",
    "@babel/preset-typescript": "^7.13.0",
    "@types/form-data": "^2.5.0",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.168",
    "@types/luxon": "^1.26.2",
    "@types/node-fetch": "^2.5.8",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@types/recharts": "^1.8.19",
    "@types/sharp": "^0.27.1",
    "@types/styled-components": "^5.1.8",
    "@types/xml2js": "^0.4.8",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "copy-webpack-plugin": "^8.0.0",
    "cross-env": "^7.0.3",
    "esbuild-webpack-plugin": "^1.1.0",
    "eslint": "7.22.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.2.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^26.6.3",
    "jest-mock-axios": "^4.3.0",
    "prettier": "^2.2.1",
    "serverless": "^2.29.0",
    "serverless-offline": "^6.8.0",
    "serverless-webpack": "^5.3.5",
    "telegram-typings": "5.0.0",
    "typescript": "^4.2.3",
    "webpack": "^5.25.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "babel-jest"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/.webpack",
      "<rootDir>/node_modules/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleNameMapper": {
      "\\.mp4$": "<rootDir>/src/__mocks__/fileMock.ts"
    },
    "setupFiles": [
      "./setupJest.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
