    "serverless": "^2.65.0",
    "serverless-esbuild": "^1.21.1",
    "serverless-offline": "^8.2.0",
    "typescript": "^4.4.4"
  },
  "engines": {
    "node": ">= 14"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "esbuild-jest",
        {
          "sourcemap": true
        }
      ]
    }
  },
  "workspaces": {
    "packages": [
      "packages/**"
    ]
  }
