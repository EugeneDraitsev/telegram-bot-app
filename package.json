    "@types/lodash": "^4.14.176",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "aws-lambda": "^1.0.6",
    "esbuild": "^0.13.13",
    "esbuild-jest": "^0.5.0",
    "eslint": "8.2.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^6.0.0",
