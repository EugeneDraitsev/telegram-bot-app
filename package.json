{
  "name": "chat-bot",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/EugeneDraitsev/telegram-bot-app"
  },
  "author": "Eugene Draitsev <ddrrai@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "cross-env IS_LOCAL=true sls offline start",
    "lint": "eslint \"src/**\"",
    "lint:fix": "eslint \"src/**\" --fix",
    "tsc": "tsc --noEmit",
    "test": "cross-env IS_LOCAL=true jest --verbose  --coverage",
    "logs": "sls logs -f telegram-bot -t",
    "deploy-function": "sls deploy function --function telegram-bot --verbose"
  },
  "dependencies": {
    "aws-sdk": "^2.703.0",
    "aws-xray-sdk": "^3.1.0",
    "form-data": "^3.0.0",
    "lodash": "^4.17.15",
    "luxon": "^1.24.1",
    "node-fetch": "^2.6.0",
    "telegraf": "3.38.0",
    "telegram-typings": "^4.0.0-beta",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "@babel/core": "7.10.3",
    "@babel/preset-env": "7.10.3",
    "@babel/preset-typescript": "^7.10.1",
    "@types/form-data": "^2.5.0",
    "@types/jest": "^26.0.2",
    "@types/lodash": "^4.14.157",
    "@types/luxon": "^1.24.1",
    "@types/node-fetch": "^2.5.7",
    "@types/xml2js": "^0.4.5",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "babel-jest": "^26.1.0",
    "babel-loader": "^8.1.0",
    "cross-env": "^7.0.2",
    "eslint": "7.3.1",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jest": "^23.17.1",
    "jest": "^26.1.0",
    "jest-fetch-mock": "^3.0.3",
    "serverless": "^1.73.1",
    "serverless-offline": "^6.4.0",
    "serverless-webpack": "^5.3.2",
    "typescript": "^3.9.5",
    "webpack": "^5.0.0-beta.18"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "babel-jest"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/.webpack",
      "<rootDir>/node_modules/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleNameMapper": {
      "\\.mp4$": "<rootDir>/src/__mocks__/fileMock.ts"
    },
    "setupFiles": [
      "./setupJest.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
