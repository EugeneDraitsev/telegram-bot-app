    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-sonarjs": "^0.10.0",
    "jest": "^27.3.1",
    "jest-mock-axios": "^4.4.1",
    "lerna": "^4.0.0",
