{
  "name": "chat-bot",
  "version": "1.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/EugeneDraitsev/telegram-bot-app"
  },
  "author": "Eugene Draitsev <ddrrai@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "sls offline start --reloadHandler",
    "build": "sls package",
    "lint": "eslint packages/**/*.**",
    "lint:fix": "eslint packages/**/*.** --fix",
    "tsc": "tsc --noEmit",
    "format": "prettier --write ./packages",
    "test": "jest --verbose  --coverage",
    "logs": "sls logs -f telegram-bot -t",
    "deploy": "sls deploy"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.502.0",
    "@aws-sdk/client-lambda": "^3.502.0",
    "@aws-sdk/client-s3": "^3.502.0",
    "@aws-sdk/lib-dynamodb": "^3.502.0",
    "lodash": "^4.17.21",
    "sharp": "^0.33.2"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.133",
    "@types/form-data": "^2.5.0",
    "@types/jest": "^29.5.11",
    "@types/lodash": "^4.14.202",
    "@typescript-eslint/eslint-plugin": "6.20.0",
    "@typescript-eslint/parser": "6.20.0",
    "esbuild": "^0.20.0",
    "esbuild-jest": "^0.5.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-sonarjs": "^0.23.0",
    "jest": "^29.7.0",
    "lerna": "^8.0.2",
    "prettier": "^3.2.4",
    "serverless": "^3.38.0",
    "serverless-esbuild": "1.50.2",
    "serverless-offline": "^13.3.3",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">= 18"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "esbuild-jest",
        {
          "sourcemap": true
        }
      ]
    }
  },
  "workspaces": {
    "packages": [
      "packages/**"
    ]
  }
}
