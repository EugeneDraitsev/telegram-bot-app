{
  "name": "chat-bot",
  "version": "1.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/EugeneDraitsev/telegram-bot-app"
  },
  "author": "Eugene Draitsev <ddrrai@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "sls offline start --reloadHandler",
    "build": "sls package",
    "lint": "eslint packages",
    "lint:fix": "eslint packages --fix",
    "tsc": "tsc --noEmit",
    "format": "prettier --write ./packages",
    "test": "jest --verbose  --coverage",
    "logs": "sls logs -f telegram-bot -t",
    "deploy": "sls deploy"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.379.1",
    "@aws-sdk/client-lambda": "^3.379.1",
    "@aws-sdk/client-s3": "^3.379.1",
    "@aws-sdk/lib-dynamodb": "^3.379.1",
    "lodash": "^4.17.21",
    "sharp": "^0.32.4"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.119",
    "@types/form-data": "^2.5.0",
    "@types/jest": "^29.5.3",
    "@types/lodash": "^4.14.196",
    "@types/sharp": "^0.31.1",
    "@typescript-eslint/eslint-plugin": "6.2.0",
    "@typescript-eslint/parser": "6.2.0",
    "aws-lambda": "^1.0.7",
    "esbuild": "^0.18.17",
    "esbuild-jest": "^0.5.0",
    "eslint": "8.46.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-sonarjs": "^0.19.0",
    "jest": "^29.6.2",
    "lerna": "^7.1.4",
    "prettier": "^3.0.0",
    "serverless": "^3.33.0",
    "serverless-esbuild": "1.46.0",
    "serverless-offline": "^12.0.4",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">= 18"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "esbuild-jest",
        {
          "sourcemap": true
        }
      ]
    }
  },
  "workspaces": {
    "packages": [
      "packages/**"
    ]
  }
}
