    "@types/sharp": "^0.30.4",
    "@typescript-eslint/eslint-plugin": "5.31.0",
    "@typescript-eslint/parser": "5.31.0",
    "aws-lambda": "^1.0.7",
    "esbuild": "0.14.48",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-jest": "^26.7.0",
